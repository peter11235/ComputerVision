public class MyApplication {

    private Form current;
    private Resources theme;
    private Container photoContainer;
    private BorderLayout bL;
    private FlowLayout fL;
    private Form hi;
    private Image plantImage;
    Classifier classifier;
    
    private Button classifyPlantButton;
    private Button takePhotoButton;
    
    public void init(Object context) {
        theme = UIManager.initFirstTheme("/theme");

        // Enable Toolbar on all Forms by default
        Toolbar.setGlobalToolbar(true);
        setupWelcomeForm();
    }
    
    public void setupWelcomeForm()
    {
    	Label welcome = new Label("Welcome to the Plant Classifier");
    	
    	bL= new BorderLayout();
        fL = new FlowLayout();
        bL.setCenterBehavior(BorderLayout.CENTER_BEHAVIOR_CENTER_ABSOLUTE);
        hi = new Form("Welcome", bL);
        
        int directionsRows = 50;
        int directionsCols = 50;
        final String directionsString = "Take a picture of a flower on a BLACK background.";
        TextArea directions = new TextArea(directionsString, directionsRows, directionsCols);
        
        photoContainer = new Container(bL);
        
        classifyPlantButton = new Button("Classify this plant");
        classifyPlantButton.addActionListener(classifyButtonListener);
        
        takePhotoButton = new Button("Take a photo of a plant");
        takePhotoButton.addActionListener(takePhotoButtonListener);
        
        hi.add(directions);
        hi.add(takePhotoButton);
        hi.addComponent(photoContainer);
        hi.add(classifyPlantButton);
        
    }
    
    public void start() {
        if(current != null){
            current.show();
            return;
        }
        showWelcomeForm();
    }
    
    private void showWelcomeForm()
    {
    	hi.revalidate();
    	if (plantImage == null)
        {
        	classifyPlantButton.setEnabled(false);
        }
    	else
    	{
    		classifyPlantButton.setEnabled(true);
    	}
        hi.show();
    }
    
    

