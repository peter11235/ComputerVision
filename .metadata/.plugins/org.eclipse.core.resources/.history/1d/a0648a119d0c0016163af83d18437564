    private ActionListener classifyButtonListener = new ActionListener()
    {
    	public void actionPerformed(ActionEvent event)
    	{
    		//classifier.classify(plantImage);
    	}
    };
    private ActionListener takePhotoButtonListener = new ActionListener()
    {
    	public void actionPerformed(ActionEvent event)
    	{
    		String photoPath = Capture.capturePhoto(1024, -1);
			if (photoPath != null)
			{
				try {
					Image img = Image.createImage(photoPath);
					plantImage = img;
					photoContainer.add(plantImage);
				} catch (IOException e) {
					System.out.println("From create picture button listener");
					e.printStackTrace();
				}
			}
    	}
    };
    public void stop() {
        current = Display.getInstance().getCurrent();
        if(current instanceof Dialog) {
            ((Dialog)current).dispose();
            current = Display.getInstance().getCurrent();
        }
    }
    
